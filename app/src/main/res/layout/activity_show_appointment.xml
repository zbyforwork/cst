<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hxkj.cst.cheshuotong.activity.SelectCarTypeActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:background="@color/appColor">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_width_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="查看预约"
            android:textColor="@color/white"
            android:textSize="@dimen/title_font_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/bg_White"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="right"
                android:text="机构名称"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/label_name"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:text=""
                android:textColor="@color/font_grey_color"
                android:textColorHint="@color/font_grey_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_White"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_idcard"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="right"
                android:text="机构地址"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/label_idcard"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:text=""
                android:textColor="@color/font_grey_color"
                android:textColorHint="@color/font_grey_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_White"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_tel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="right"
                android:text="联系电话"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/label_tel"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:text=""
                android:textColor="@color/font_grey_color"
                android:textColorHint="@color/font_grey_color" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_ewm"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>
</LinearLayout>
