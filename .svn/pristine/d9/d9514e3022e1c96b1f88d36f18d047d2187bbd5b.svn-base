<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#f9f9f9"
              tools:context="com.hxkj.cst.cheshuotong.activity.AddCarActivity">
    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="@dimen/title_background_size"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="缴税"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/et_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_name"
            android:layout_marginLeft="5dp"
            android:hint="请输入姓名"
            android:background="@null"
            android:selectAllOnFocus="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="王大锤"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_idcard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/tv_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_idcard"
            android:layout_marginLeft="5dp"
            android:hint="请输入身份证"
            android:selectAllOnFocus="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="510106198909223214"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_engine_code"
            android:layout_width="100dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="发动机编号"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_engine_code"
            android:layout_marginLeft="5dp"
            android:hint="请输入地址"
            android:selectAllOnFocus="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="51546465154"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_tax_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="缴税价格"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_tax_price"
            android:layout_marginLeft="5dp"
            android:hint="请输入电话"
            android:selectAllOnFocus="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="￥12131.00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        >
        <Button
            android:id="@+id/bt_appointment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/pay_taxes_forward_bg"
            android:text="预约"
            android:textColor="@color/appColor"
            android:textSize="@dimen/normal_font_size"/>
        <Button
            android:id="@+id/bt_pay_taxes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pay_taxes_next_bg"
            android:text="缴税"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/normal_font_size"/>

    </LinearLayout>

</LinearLayout>



