<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.hxkj.cst.cheshuotong.activity.FeedBackActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:layout_marginBottom="5dp"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        >

        <RelativeLayout
            android:id="@+id/rel_Number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/bg_White"
            >


            <EditText
                android:id="@+id/et_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请填写您的QQ号，邮箱，或者手机号"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:singleLine="false"
                android:background="@null"
                android:inputType="textEmailAddress"
                />



            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_Number"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>

        </RelativeLayout>



        <ScrollView
            android:id="@+id/sc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_Number"
            >


            <RelativeLayout
                android:id="@+id/rel_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:background="@color/bg_White"
                android:layout_below="@+id/rel_Number"

                >


                <EditText
                    android:id="@+id/et_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/feedback"
                    android:textColor="@color/black"
                    android:singleLine="false"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:inputType="textMultiLine|text"
                    />



                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_divider"
                    android:layout_alignParentBottom="true"
                    android:background="#E0E0E0"/>

            </RelativeLayout>


        </ScrollView>





    </RelativeLayout>


    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/re_top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonblue"
        android:layout_marginTop="220dp"
        android:text="提 交"
        android:textColor="@color/bg_White"
        android:textSize="@dimen/normal_font_size"/>

</RelativeLayout>
