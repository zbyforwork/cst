<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.hxkj.cst.cheshuotong.activity.AddCarActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:layout_marginBottom="5dp"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="缴税"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/re_top"
        android:background="@color/bg_White"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/label_location"
            android:layout_width="100dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="所在区域"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/label_location"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/iv_jump_to_place_location"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/next"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        android:layout_marginTop="20dp"
        >


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_divider"
            android:background="#E0E0E0"/>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/view1"
            android:background="#F7F7F7">


            <RelativeLayout
                android:id="@+id/rel_mail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="车辆类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_divider"
                    android:layout_alignParentBottom="true"
                    android:background="#E0E0E0"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_carType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relative"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/label_carType"
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="车型"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <TextView
                android:id="@+id/tv_carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/label_carType"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="请选择你的车型"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <ImageView
                android:id="@+id/iv_carType1"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/next"
                />

            <View
                android:id="@+id/view444"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_carNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_carType"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/label_carNumber"
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="厂牌号码"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>
            <EditText
                android:id="@+id/tv_carNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/label_carNumber"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:hint="请输入厂牌号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>


            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_chejiahao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_carNumber"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/label_chejiahao"
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="车架号"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <EditText
                android:id="@+id/tv_chejiahao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/label_chejiahao"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:hint="请输入车架号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <ImageView
                android:id="@+id/iv_help_one"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:src="@drawable/ic_help_appcolor"
                android:scaleType="fitXY"
                />


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_fadongjihao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rel_chejiahao"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/label_fadongjihao"
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="发动机号"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <EditText
                android:id="@+id/tv_fadongjihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/label_fadongjihao"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:selectAllOnFocus="true"
                android:hint="请输入发动机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>
            <ImageView
                android:id="@+id/iv_help_two"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:src="@drawable/ic_help_appcolor"
                android:scaleType="fitXY"
                />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/viewdown"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/relativeLayout"

        />

    <RelativeLayout
        android:id="@+id/rel_remarks"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewdown"
        android:background="@color/bg_White">


        <TextView
            android:id="@+id/label_remarks"
            android:layout_width="100dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:singleLine="true"
            android:text="备注"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_font_size"/>
        <EditText
            android:id="@+id/tv_remarkss2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/label_remarks"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:selectAllOnFocus="true"
            android:hint="为您的爱车取个好听的昵称吧"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_font_size"/>


        <View
            android:id="@+id/viewlast"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_divider"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_remarks"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/tax_tips"
            android:textSize="@dimen/small_font_size"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        >
        <Button
            android:id="@+id/bt_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/pay_taxes_forward_bg"
            android:text="上一步"
            android:textColor="@color/appColor"
            android:textSize="@dimen/normal_font_size"/>
        <Button
            android:onClick="next"
            android:id="@+id/bt_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pay_taxes_next_bg"
            android:text="下一步"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/normal_font_size"/>

    </LinearLayout>


</LinearLayout>



