<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#f9f9f9">
    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="缴税"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_certification"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="合格证编号"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/et_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_certification"
            android:layout_marginLeft="5dp"
            android:hint="请输入合格证编号"
            android:background="@null"
            android:selectAllOnFocus="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="WDV04513135465"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_date_of_issue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="发证日期"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/et_date_of_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_date_of_issue"
            android:layout_marginLeft="5dp"
            android:hint="请输入发证日期"
            android:background="@null"
            android:selectAllOnFocus="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="2015年10月19日"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_car_enterprise_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="车辆企业名称"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/tv_car_enterprise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_car_enterprise_name"
            android:layout_marginLeft="5dp"
            android:hint="请输入车辆企业名称"
            android:background="@null"
            android:selectAllOnFocus="true"
            android:layout_centerVertical="true"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="长安牌"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:id="@+id/label_car_color"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="车身颜色"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/tv_car_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_car_color"
            android:layout_marginLeft="5dp"
            android:hint="请输入车身颜色"
            android:selectAllOnFocus="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textColor="@color/font_grey_color"
            android:textColorHint="@color/font_grey_color"
            android:text="闪光珍珠白"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:background="@color/bg_White"
    >
    <TextView
        android:id="@+id/label_identification_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="车辆识别代号"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        />
    <EditText
        android:id="@+id/tv_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/label_identification_code"
        android:layout_marginLeft="5dp"
        android:hint="请输入车辆识别代号"
        android:background="@null"
        android:selectAllOnFocus="true"
        android:layout_centerVertical="true"
        android:textColor="@color/font_grey_color"
        android:textColorHint="@color/font_grey_color"
        android:text="LS5a21s5d4f5s"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/bg_White"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*************示意*************"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="18dp"
            />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        >
        <Button
            android:id="@+id/bt_forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/pay_taxes_forward_bg"
            android:text="上一步"
            android:textColor="@color/appColor"
            android:textSize="@dimen/normal_font_size"/>
        <Button
            android:onClick="next"
            android:id="@+id/bt_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pay_taxes_next_bg"
            android:text="下一步"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/normal_font_size"/>

    </LinearLayout>
</LinearLayout>



