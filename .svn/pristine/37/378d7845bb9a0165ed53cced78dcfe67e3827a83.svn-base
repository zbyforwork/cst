<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.hxkj.cst.cheshuotong.activity.PasswordResetActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:layout_marginBottom="5dp"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_Passwordback"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="新密码设置"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_divider"
            android:background="#E0E0E0"/>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/view1"
            android:background="#F7F7F7">


            <RelativeLayout
                android:id="@+id/rel_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/tv_newpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="新 密 码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <EditText
                    android:id="@+id/et_newpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:background="@null"
                    android:hint=" 请输入您的新密码"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:textSize="@dimen/normal_font_size"/>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_divider"
                    android:layout_alignParentBottom="true"
                    android:background="#E0E0E0"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_chongfu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relative"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/tv_chongfu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text=" 请 重 复"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <EditText
                android:id="@+id/et_chongfu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:hint=" 请再次输入"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <TextView
                android:id="@+id/tv_info"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="*密码输入不相同"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                />


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>
        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:onClick="submit"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonblue"
        android:text="确认"
        android:textColor="@color/bg_White"
        android:textSize="@dimen/normal_font_size"/>


</RelativeLayout>
