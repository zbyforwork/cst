<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.hxkj.cst.cheshuotong.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:layout_marginBottom="5dp"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="设置中心"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        >

        <RelativeLayout
            android:id="@+id/rel_pushSettingone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/bg_White"
            >


            <TextView
                android:id="@+id/tv_pushSettingone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推 送 设 置"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/iv_pushSettingone"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:src="@drawable/next"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rel_suggestionBack"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@+id/rel_pushSettingone"
            android:background="@color/bg_White"
            >


            <TextView
                android:id="@+id/tv_suggestionBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意 见 反 馈"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/iv_suggestionBack"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:src="@drawable/next"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_checkupdate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@+id/rel_suggestionBack"
            android:background="@color/bg_White"
            >


            <TextView
                android:id="@+id/tv_checkupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检 查 更 新"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:id="@+id/iv_checkupdate"
                android:layout_width="@dimen/title_image_width_25"
                android:layout_height="@dimen/title_image_height_25"
                android:src="@drawable/next"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>
