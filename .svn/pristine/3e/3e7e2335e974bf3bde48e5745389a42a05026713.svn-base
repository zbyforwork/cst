<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f9f9f9"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:background="@color/appColor"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="缴税"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_car_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                fresco:placeholderImage="@drawable/astonmatrinone77"
                fresco:placeholderImageScaleType="centerCrop"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="@color/bg_White"
                >
                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_name"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_grey_color"
                    android:textColorHint="@color/font_grey_color"
                    android:text="史小鹏"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/bg_White"
                >
                <TextView
                    android:id="@+id/label_idcard"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_idcard"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_grey_color"
                    android:textColorHint="@color/font_grey_color"
                    android:text="151566451215645"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/bg_White"
                >
                <TextView
                    android:id="@+id/label_tel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_tel"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_grey_color"
                    android:textColorHint="@color/font_grey_color"
                    android:text="1484121"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/bg_White"
                >
                <TextView
                    android:id="@+id/label_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="住址"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_address"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_grey_color"
                    android:textColorHint="@color/font_grey_color"
                    android:text="成都市龙泉驿"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_carType"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/label_carType"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="车型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/tv_carType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/label_carType"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:text="奥迪A6L"
                    android:singleLine="true"
                    android:textColor="@color/font_grey_color"
                    android:textSize="@dimen/normal_font_size"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_carNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_carType"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/label_carNumber"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="厂牌号码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>
                <TextView
                    android:id="@+id/tv_carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/label_carNumber"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:text="川滴滴滴滴"
                    android:textColor="@color/font_grey_color"
                    android:textSize="@dimen/normal_font_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_chejiahao"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_carNumber"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/label_chejiahao"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="车架号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/tv_chejiahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/label_chejiahao"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:text="LDLSLDL5156464"
                    android:textColor="@color/font_grey_color"
                    android:textSize="@dimen/normal_font_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_fadongjihao"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rel_chejiahao"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/label_fadongjihao"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:text="发动机号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <TextView
                    android:id="@+id/tv_fadongjihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/label_fadongjihao"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:selectAllOnFocus="true"
                    android:text="NJSD51156123"
                    android:textColor="@color/font_grey_color"
                    android:textSize="@dimen/normal_font_size"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/bg_White"
                >
                <TextView
                    android:id="@+id/label_tax_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="应缴税额"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/label_tax_price"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="@color/font_grey_color"
                    android:text="￥12131.00"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                >
                <Button
                    android:id="@+id/bt_appointment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/pay_taxes_forward_bg"
                    android:text="预约"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/normal_font_size"/>
                <Button
                    android:id="@+id/bt_pay_taxes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/pay_taxes_next_bg"
                    android:text="缴税"
                    android:textColor="@color/bg_White"
                    android:textSize="@dimen/normal_font_size"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



