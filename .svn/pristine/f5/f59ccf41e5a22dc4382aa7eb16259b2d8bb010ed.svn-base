<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.hxkj.cst.cheshuotong.activity.AccountRegisterFirstActivity">

    <RelativeLayout
        android:id="@+id/re_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_background_size"
        android:layout_marginBottom="5dp"
        android:background="@color/appColor"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_image_width_25"
            android:layout_height="@dimen/title_image_height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/bg_White"
            android:textSize="@dimen/title_font_size"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_top"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_divider"
            android:background="#E0E0E0"/>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/view1"
            android:background="#F7F7F7">


            <RelativeLayout
                android:id="@+id/rel_erweima"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_White">


                <TextView
                    android:id="@+id/tv_erweima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:text="二维码扫描"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_font_size"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="35dp"
                    android:layout_centerVertical="true"
                    >

                    <ImageView
                        android:id="@+id/iv_next1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/next"
                        android:layout_gravity="center_vertical"
                        />


                </LinearLayout>



                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thin_divider"
                    android:layout_alignParentBottom="true"
                    android:background="#E0E0E0"/>
            </RelativeLayout>

            </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_byhand"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relative"
            android:background="@color/bg_White">


            <TextView
                android:id="@+id/tv_byhand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:singleLine="true"
                android:text="手动输入"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_font_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/iv_next2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_divider"
                android:layout_alignParentBottom="true"
                android:background="#E0E0E0"/>
        </RelativeLayout>

    </RelativeLayout>

     <TextView
         android:id="@+id/registerAnother"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="扫描解析申报表二维码进行注册"
         android:textColor="@color/gray"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="20dp"
         android:layout_below="@+id/relativeLayout"

         />


</RelativeLayout>
